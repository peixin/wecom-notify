{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "COMMONJS",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "@cloudflare/workers-types",
      "@types/jest",
      "@types/service-worker-mock"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    },
  },
  "include": [
    "src",
    "tests",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}